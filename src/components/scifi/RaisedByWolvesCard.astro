<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.15rem;
		background-color: rgb(33, 156, 8);
		background-image: var(--accent-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
	}
	h2 {
		margin: 13px;
		font-size: 1.25rem;
		color: rgb(247, 243, 243);
