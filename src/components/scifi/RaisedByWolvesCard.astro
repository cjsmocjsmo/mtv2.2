---
export interface Props {
	title: string;
	src: string;
}

const { title, src } = Astro.props;
---

<li class="link-card">
	<div class="bg-blue-700">
		<!-- <h2>
			{title}
		</h2> -->
		<img src={src} alt=""/>
		<div class="w-full flex grow justify-evenly items-center">
			<a href="/tvshows/scifi/RaisedByWolves/RaisedByWolvesS01EpiList">1</a>
			<a href="/tvshows/scifi/RaisedByWolves/RaisedByWolvesS02EpiList">2</a>
