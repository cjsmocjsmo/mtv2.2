---
export interface Props {
	title: string;
	body: string;
	href: string;
	src: string;
}

const { href, title, body, src } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<!-- <span>&rarr;</span> -->
		</h2>
		<img src={src} alt=""/>
		<div class="w-full flex grow justify-evenly items-center">
			<p>1</p>
			<p>2</p>
			<!-- {body} -->
		</div>
	</a>
</li>
